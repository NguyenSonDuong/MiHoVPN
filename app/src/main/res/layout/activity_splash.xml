<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBlue"
    tools:context="com.minhhoang.ui.SplashActivity">

    <!--change splash background-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>

    <!--change logo-->
    <ImageView
        android:id="@+id/logosplash"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/splashlogo"/>

    <!--change logo-->

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v 1.2.0"
        android:fontFamily="@font/monlight"
        android:textSize="12sp"
        android:textColor="@color/Text_idle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dfive"
        android:layout_marginBottom="@dimen/dfive"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorSecondary"
    tools:context="com.minhhoang.ui.MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menubackbackground"/>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_toEndOf="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="@color/WhiteBlue"
            android:textSize="20sp"
            android:fontFamily="@font/monbold"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/menu_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:background="#2B2B2B"
        android:fontFamily="@font/monlight"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Privacy Policy"
        android:textColor="@color/ColorWhite"
        android:textSize="12sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/menu_terms"
        android:layout_below="@+id/menu_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:text="Terms of Service"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/monlight"
        android:background="#2B2B2B"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

    <TextView
        android:id="@+id/menu_about"
        android:layout_below="@+id/menu_terms"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="About"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/monlight"
        android:background="#2B2B2B"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

    <TextView
        android:id="@+id/menu_rate"
        android:layout_below="@+id/menu_about"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Rate"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/monlight"
        android:background="#2B2B2B"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_rate"
        android:id="@+id/version"
        android:text="Version 1.2"
        android:textSize="26sp"
        android:textColor="#009688"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monbold"/>

    <TextView
        android:id="@+id/check"
        android:layout_below="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Version"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        android:fontFamily="@font/monlight"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/id_native_ad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
